# Application Settings
APP_NAME="PanPacific University Library"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Manila

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=library_db
DB_USERNAME=library_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=library@panpacific.edu.ph
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=library@panpacific.edu.ph
MAIL_FROM_NAME="${APP_NAME}"

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=7200
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=library_
CACHE_TTL=3600

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx

# Library Settings
MAX_BOOKS_PER_USER=5
LOAN_DURATION_DAYS=14
FINE_PER_DAY=5.00
RENEWAL_LIMIT=2
RESERVATION_DURATION_DAYS=2
RESERVATION_LIMIT=3

# Payment Gateway (GCash)
GCASH_MERCHANT_ID=your_merchant_id
GCASH_PUBLIC_KEY=your_public_key
GCASH_PRIVATE_KEY=your_private_key
GCASH_ENVIRONMENT=production

# Security
ENCRYPTION_KEY=your_32_char_random_key
JWT_SECRET=your_jwt_secret_key
API_KEY=your_api_key
CSRF_TOKEN_LIFETIME=7200

# Social Media Links
FACEBOOK_URL=https://facebook.com/panpacificuniversity
TWITTER_URL=https://twitter.com/panpacificuni
INSTAGRAM_URL=https://instagram.com/panpacificuni
LINKEDIN_URL=https://linkedin.com/school/panpacificuniversity

# Contact Information
LIBRARY_PHONE="+63 (2) 8123-4567"
LIBRARY_ADDRESS="123 University Avenue, Quezon City, Philippines"
LIBRARY_HOURS="8:00 AM - 8:00 PM"
SUPPORT_EMAIL=support@panpacific.edu.ph
ADMIN_EMAIL=admin@panpacific.edu.ph

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_MAX_FILES=30
LOG_MAX_SIZE=10485760

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_TOKEN=your_maintenance_token

# Feature Flags
ENABLE_BOOK_RESERVATIONS=true
ENABLE_READING_LISTS=true
ENABLE_BOOK_REVIEWS=true
ENABLE_NOTIFICATIONS=true
ENABLE_API=true

# Development Settings (Set to false in production)
SHOW_DEBUG_BACKTRACE=false
DISPLAY_ERROR_DETAILS=false
ENABLE_QUERY_LOG=false
ENABLE_DEMO_MODE=false

# Backup Settings
BACKUP_ENABLED=true
BACKUP_DIR=/path/to/backup/directory
BACKUP_RETENTION_DAYS=30

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
ENABLE_USAGE_TRACKING=true

# Third-party Services
SENTRY_DSN=your_sentry_dsn
NEWRELIC_LICENSE_KEY=your_newrelic_key
